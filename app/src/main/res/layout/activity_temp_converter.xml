<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TempConverterActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="310dp">

        <RadioButton
            android:id="@+id/cel"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="checkButton"
            android:text="Stopnie Celsjusza °C" />

        <RadioButton
            android:id="@+id/faren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Stopnie Farenheita °F" />

        <RadioButton
            android:id="@+id/kel"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:onClick="checkButton"
            android:text="Kelwin" />

        <RadioButton
            android:id="@+id/del"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Stopnie Delisle'a °De" />

        <RadioButton
            android:id="@+id/rea"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:text="Stopnie Réaumura °R" />

        <RadioButton
            android:id="@+id/ran"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:text="Stopnie Rankine'a °Ra" />

        <RadioButton
            android:id="@+id/rom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Stopnie Romera °Rø" />

        <RadioButton
            android:id="@+id/newton"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="Newton °N" />

    </RadioGroup>

    <TextView
        android:id="@+id/text_view_selected"
        android:layout_width="379dp"
        android:layout_height="426dp"
        android:layout_below="@+id/radioGroup"
        android:layout_marginTop="151dp"
        android:textSize="20sp"
        tools:text="Your selection: " />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_view_selected"
        android:layout_alignEnd="@+id/radioGroup"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="155dp"
        android:text="apply" />

    <EditText
        android:id="@+id/liczba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_apply"
        android:layout_alignBottom="@+id/button_apply"
        android:layout_marginEnd="-61dp"
        android:layout_marginBottom="57dp"
        android:ems="10"
        android:inputType="numberDecimal" />

</RelativeLayout>